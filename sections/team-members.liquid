<div class="page-width">

  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title | escape }}</h2>
	{% endif %}

	<div class="grid grid--2-col-desktop">
		{% for member in section.blocks %}
			<div class="grid__item" style="margin-top:30px;">
				{% if member.settings.photo %}
				<img src="{{ member.settings.photo | image_url | asset_img_url: '300x300' }}" alt="" loading="lazy"/>
				{% endif %}
				<h3>{{ member.settings.name }}</h3>
				<span>{{ member.settings.title }}</span>
				<p>{{ member.settings.bio }}</p>
			</div>
		{% endfor %}
	</div>
</div>

{% schema %}
{
	"name": "Team Members",
	"class": "team-members-section",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Section Title",
			"default": "Meet our Team"
		}
	],
	"blocks": [
		{
			"name": "Team Member",
			"type": "profile",
			"settings": [
				{
					"type": "image_picker",
					"id": "photo",
					"label": "Photo"
				},
				{
					"type": "text",
					"id": "name",
					"label": "Name"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Job Title"
				},
				{
					"type": "textarea",
					"id": "bio",
					"label": "Bio"
				}
			]
		}
	],
  "presets": [
    {
      "name": "Team Members"
    }
  ]
}
{% endschema %}